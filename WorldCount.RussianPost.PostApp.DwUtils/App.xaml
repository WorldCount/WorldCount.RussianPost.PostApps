<Application x:Class="WorldCount.RussianPost.PostApp.DwUtils.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WorldCount.RussianPost.PostApp.DwUtils"
             xmlns:vm="clr-namespace:WorldCount.RussianPost.PostApp.DwUtils.ViewModels"
             StartupUri="Views/Windows/MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Infrastructure/Commands/Commands.xaml"/>

                <ResourceDictionary Source="pack://application:,,,/WorldCount.RussianPost.PostApp.Styles;component/Resources/Styles/Base/Brushes.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/WorldCount.RussianPost.PostApp.Styles;component/Resources/Styles/Menu/Menu.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <vm:ViewModelLocator x:Key="Locator"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
